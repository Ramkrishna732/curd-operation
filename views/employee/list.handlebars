<h3>
    Employee List
</h3>
<div class="form-group">
            
            <input type="text" class="form-control" name="search" value="" placeholder="Search By Name">

        </div>
        
    <tr>
        <a href="/employee/list" class="btn btn-danger">
        <i class="fa fa-serach"> </i> Search
    </a>
        <td>
            <a href="/employee" class="btn btn-danger">
        <i class="fa fa-plus"> </i> Create New
    </a>
        </td>
    </tr>
    
<table class="table table-striped">
    <thead>
        <tr>
            <th>Full Name</th>
            <th>Email</th>
            <th>Designation</th>
            <th>Mobile</th>
            <th>City</th>
            <th>JOIN Date</th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each list}}
        <tr>
            <td>{{this.fullName}}</td>
            <td>{{this.email}}</td>
            <td>{{this.designation}}</td>
            <td>{{this.mobile}}</td>
            <td>{{this.city}}</td>
            <td>{{this.date}}</td>

            <td>
                <a href="/employee/{{this._id}}">
                    <i class="fa fa-pencil fa-lg" aria-hidden="true"></i>
                </a>
                <a href="/employee/delete/{{this._id}}"
                    onclick="return confirm('Are you sure to delete this record?');">
                    <i class="fa fa-trash fa-lg" aria-hidden="true">

                    </i>
                </a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>