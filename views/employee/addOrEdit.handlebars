<h3>{{viewTitle}}</h3>

    <form action="/employee" method="POST" autocomplete="off">
        <input type="hidden" name="_id" value="{{employee._id}}">
        <div class="form-group">
            <label>Full Name</label>
            <input type="text" class="form-control" name="fullName" value="{{employee.fullName}}" placeholder="Full Name">
                        <div class="text-danger">
                {{employee.fullNameError}}
            </div>
        </div>
        <div class="form-group">
            <label>Email</label>
            <input type="email" class="form-control" name="email" value="{{employee.email}}" placeholder="Email">
            <div class="text-danger">
                    {{employee.emailError}}
                </div>
        </div>
        <div class="form-row">
             <div class="form-group md-6">
                <label>Designation</label>
                <input type="text" name="designation" placeholder="Designation" value="{{employee.designation}}" class="form-control">
                
            <div class="form-group md-6">
                <label>Mobile</label>
                <input type="text" name="mobile" placeholder="Mobile" value="{{employee.mobile}}" class="form-control">
                <div class="text-danger">
                    {{employee.mobileError}}
                </div>
             </div>
            <div class="form-group md-6">
                <label>City</label>
                <input type="text" name="city" placeholder="City" value="{{employee.city}}" class="form-control">
            </div>
            <div class="form-group md-6">
                <label>Join Date</label>
                <input type="date" name="date" placeholder="Date" value="{{employee.date}}" class="form-control">
           <div class="text-danger">
                    {{employee.dateError}}
                </div>
            </div>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-info"><i class="fa fa-database"></i>Submit</button>
            <a href="/employee/list" class="btn btn-danger">
                <i class="fa fa-list-alt"></i>View All
            </a>
            <a href="http://localhost:3000/route/dashboard" class="btn btn-danger">
                <i class="fa fa-list-alt"></i>Dashboard
            </a>
        
        </div>


    </form>
